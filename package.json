{
  "name": "chamaeleon",
  "version": "0.2.0",
  "main": "index.js",
  "author": "brn.gdsn@gmail.com",
  "license": "MIT",
  "scripts": {

    "st0p": "docker stop $(docker ps -a -q)",
    "drm": "docker rm $(docker ps -a -q)",
    "klean": "yarn st0p && yarn drm",

    "build": "docker-compose build",
    "start": "docker-compose up",
    "start+": "WORDPRESS_DB_PASSWORD=eg-password MYSQL_ROOT_PASSWORD=eg-password yarn start",

    "build:api": "docker build -t chamaeleon-api -f dockerfiles/api/Dockerfile .",
    "klean:api": "docker rm some-chamaeleon-api",
    "api+": "docker run -it -p 10000:80 -e WORDPRESS_DB_HOST=some-chamaeleon-db:3306 -e WORDPRESS_DB_PASSWORD=eg-password --link some-chamaeleon-db --name some-chamaeleon-api chamaeleon-api",
    "api": "docker run -d -e WORDPRESS_DB_HOST=some-chamaeleon-db:3306 -e WORDPRESS_DB_PASSWORD=eg-password --link some-chamaeleon-db --name some-chamaeleon-api chamaeleon-api",

    "build:db": "docker build -t chamaeleon-db -f dockerfiles/db/Dockerfile .",
    "klean:db": "docker rm some-chamaeleon-db",
    "db+": "docker run -it -e MYSQL_ROOT_PASSWORD=eg-password --name some-chamaeleon-db chamaeleon-db",
    "db": "docker run -d -e MYSQL_ROOT_PASSWORD=eg-password --name some-chamaeleon-db  chamaeleon-db"

  }
}
